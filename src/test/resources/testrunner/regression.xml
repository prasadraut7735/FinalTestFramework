<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"> -->

<suite name="Openkart Regression Suite" verbose="10"
	parallel="tests" thread-count="7">

	<listeners>
		<listener
			class-name="com.qa.openkart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.openkart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="LoginTest">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.openkart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="AccountTest">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.openkart.tests.AccountPageTest" />
		</classes>
	</test>
	<test name="SearchTest">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.openkart.tests.SearchResultTest" />
		</classes>
	</test>
	<test name="ProductInfoTest">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.openkart.tests.ProductInfoTest" />
		</classes>
	</test>
	<test name="RegistrationPageTest">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.openkart.tests.UserRegisterTest" />
		</classes>
	</test>
</suite>